<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="399dp"
        android:layout_height="489dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/mibutton"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/mibutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="43dp"
        android:enabled="false"
        android:text="Button"
        map:layout_constraintBottom_toTopOf="@+id/map"
        map:layout_constraintStart_toStartOf="@+id/miprogressBar"
        map:layout_constraintTop_toBottomOf="@+id/miprogressBar" />

    <ProgressBar
        android:id="@+id/miprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="81dp"
        android:layout_height="82dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="32dp"
        map:layout_constraintBottom_toTopOf="@+id/mibutton"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>